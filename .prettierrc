{
  "jsxSingleQuote": true,
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 100,
  "proseWrap": "always",
  "bracketSameLine": false,
  "useTabs": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "no-multiple-empty-lines": [
    "error",
    {
      "max": 1
    }
  ],
  "overrides": [
    {
      "files": "*.{js,ts,json}",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}